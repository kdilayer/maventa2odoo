{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
        "name": "Launch maventa2odood in foreground (not server mode)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/maventa2odoo",
        "cwd": "${fileDirname}",
        "args": ["-c", "${workspaceFolder}/maventa2odoo.conf"],
        "stopAtEntry": false,
        "showDisplayString": true,
        "setupCommands": [
          {"text": "-enable-pretty-printing", "ignoreFailures": true },
          {
            "description": "Skip library files",
            "text": "-interpreter-exec console \"skip -gfi **/bits/*.h\""
          }  
        ],
        //"setupCommands": [
          // {"text": "source ${workspaceFolder}/.gdbinit"}
        //],  
        "linux": {
          "MIMode": "gdb",
          "miDebuggerPath": "/usr/bin/gdb",
          "miDebuggerArgs": "-x ${workspaceFolder}/.gdbinit"
        },
        "osx": {
          "MIMode": "lldb"
        },
      }
    ]
}